    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= Task.human_task_name :name %></th>
          <th><%= Task.human_task_name :email %></th>
          <th><%= Task.human_task_name :created_at %></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @Task.name %></td>
          <td><%= @Task.email %></td>
          <td><%= @Task.created_at %></td>
        </tr>
      </tbody>
    </table>
  </div>    
